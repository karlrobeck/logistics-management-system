{
  "extends": "@getcronit/pylon/tsconfig.pylon.json",
  "compilerOptions": {
    // add Bun type definitions
    "types": ["bun-types"],
    // specify output directory to avoid overwriting input files
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["pylon.d.ts", "src/**/*"]
}
